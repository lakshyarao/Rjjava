import java.util.Scanner;

public class SumOfNNaturalNumbers {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        
        long N = sc.nextLong();
        
        long sum = 0;
        long i = 1;
        
        
        while (i <= N) {
            sum += i;
            i++;
        }
        
        
        System.out.println(sum);
        
        sc.close();
    }
}
